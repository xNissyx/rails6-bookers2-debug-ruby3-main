<div class='container px-5 px-sm-0'>
   <%= render 'layouts/errors', obj: @book %>
  <div class='row'>

    <div class='col-md-3'>

      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book, isEdit: false %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= link_to "新しい順", books_path(latest: true), data: { turbolinks: false }  %>
      <span>|</span>
      <%= link_to "評価の高い順", books_path(evaluation_count: true), data: { turbolinks: false }  %>
      <%= render 'index', books: @books%>
    </div>
  </div>
</div>