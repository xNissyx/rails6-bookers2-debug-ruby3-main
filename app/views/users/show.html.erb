<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book, isEdit: false %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <table class="table table-bordered">
        <h2>投稿数の前日比・前週比</h2>
      <thead>
        <tr>
          <th>今日の投稿数</th>
          <th>前日の投稿数</th>
          <th>前日比</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @today_count %></td>
          <td><%= @yesterday_count %></td>
          <td><%= @diff_percent %>%</td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
</div>
