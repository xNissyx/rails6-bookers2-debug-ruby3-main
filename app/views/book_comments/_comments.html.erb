<% book_comments.each do |comment| %>
  <div class="row pl-3">
    <div>
      <%= link_to(comment.user) do %>
        <%= image_tag comment.user.get_profile_image, size:"80x80" %><br>
        <%= comment.user.name %>
      <% end %>
    </div>
    <div class="d-flex align-items-center">
      <%= comment.body %>
      <%= link_to  book_book_comment_path(comment.id), method: :delete, remote: true do %>
        <button type="button" class="btn btn-danger">Destroy</button>
      <% end %>
    </div>
  </div>
<% end %>